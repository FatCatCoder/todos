@page "/todo"
@inject HttpClient Http

<h3>Todo (@todos.Count(todo => !todo.IsComplete))</h3>

<h5>Local Todos</h5>
<ul>
    @foreach (var todo in todos)
    {
        <input type="checkbox" @bind="todo.IsComplete" />
        <input @bind="todo.Name" />
    }
</ul>

<h5>Fetched Todos</h5>
<ul>
    @foreach (var todo in apitodos)
    {
        <input type="checkbox" @bind="todo.IsComplete" />
        <input @bind="todo.Name" />
    }
</ul>

<input placeholder="new todo" @bind="newTodo" />
<button @onclick="AddTodo">Add Todo!</button>

@code {
     private TodoItem[]? apitodos;

    protected override async Task OnInitializedAsync()
    {
        apitodos = await Http.GetFromJsonAsync<TodoItem[]>("api/todoitems");
    }

    private string? newTodo;

    private List<TodoItem> todos = new();

    private void AddTodo()
    {
        if(!string.IsNullOrWhiteSpace(newTodo))
        {
            todos.Add(new TodoItem { Name = newTodo});
            newTodo = string.Empty;
        }
    }
}
